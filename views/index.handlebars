

<div class="container">

			<img id="burger_img" width="100px" src="/assets/img/burger.png" alt="burger"> 

	<div class="row">

		<div class="col-md-12">
			<h1 class="text-center text-danger">Eat-Da-Burger!</h1>
		</div>
	
	<!-- end second row -->
	</div>

	<div class="row">

		<div class="col-md-6">
	
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
							<h5 id="bur">{{this.id}}. {{this.burger_name}}
								<form action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
									<input type='hidden' name='devoured' value='true'>
									{{!-- <input type='text' name='devoured' value= "{{this.id}}. {{this.burger_name}}"> --}}
									<button type='submit' class="btn btn-default">Devour it!</button>
								</form>
							</h5>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-md-6">
		
				{{#each burgers}}
					{{#if this.devoured}}
							<h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
					{{/if}}
				{{/each}}
			
		</div>

	<!-- end third row -->
	</div>

	<br><br>

	<div class="row">

		<div class="col-md-12 text-center">
			<form class="create-update-form" action="burgers/insertOne" method="POST">
				<div class="form-group">
					
					<textarea type="text" name="name"></textarea><br>
					<button class="btn btn-primary" type="submit">Submit</button>
					<h5 class="text-center">Enter a burger you want to eat and click Submit!</h5>
				</div>
			</form>
		</div>

	<!-- end fourth row -->
	</div>

<!-- end bootstrap container -->
</div>

